<launch>

  <!-- The planning and execution components of MoveIt! configured to publish the current configuration of the robot (simulated or real) and the current state of the world as seen by the planner-->
  <include file="$(find demo_moveit_config)/launch/planning_context.launch">
      <arg name="load_robot_description" value="true"/>
  </include>
  
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
     <param name="use_gui" value="false"/>
     <rosparam param="source_list">[/robotv1/joint_states]</rosparam>
  </node>
  
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true" output="screen" />
  
  <include file="$(find demo_moveit_config)/launch/move_group.launch">
      <arg name="publish_monitored_planning_scene" value="true" />
      <arg name="allow_trajectory_execution" value="true"/>
      <arg name="fake_execution" value="false"/>
  </include>
  
  <!-- The visualization component of MoveIt! -->
  <include file="$(find demo_moveit_config)/launch/moveit_rviz.launch">
    <arg name="config" value="true"/>
  </include>

</launch>
